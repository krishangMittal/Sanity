      </div>
      <div class="footer-policies">
        <a href="/policies/terms-of-service">Terms & Conditions</a>
        <a href="/policies/terms-of-use">Terms of Use</a>
        <a href="/policies/privacy-policy">Privacy Notice</a>
        <a href="/policies/cookies">Cookie Policy</a>
        
        <!-- Language/Country Selector -->
        {% if section.settings.enable_country_selector and localization.available_countries.size > 1 %}
          <div class="language-selector">
            <a href="#" class="current-language">
              {% if localization.country.iso_code == 'IN' %}
                <span>IN</span>
              {% else %}
                <span>{{ localization.country.name }}</span>
              {% endif %}
            </a>
          </div>
        {% endif %}
        
        {% if section.settings.enable_language_selector and localization.available_languages.size > 1 %}
          <div class="language-selector">
            <a href="#" class="language-option">
              <span>{{ localization.language.endonym_name | capitalize }}</span>
            </a>
          </div>
        {% endif %}
      </div>
    </div>
</footer>

